<h1>Books</h1>
<div class="index">
  <p>Title</p>
  <% @books.each do |book| %>
   <span><%= book.title %></span>
   <span><%= book.body %></span>
   <span><%= link_to "Show", "/books/#{book.id}" %></span>
   <span><%= link_to "Edit", edit_book_path(@books.ids) %></span>
   <span><%= link_to "Destroy", book_path(@books.ids), method: :delete, "date-confirm" => "Are you sure?" %></span>
  <% end %>
</div>



<h3>New book</h3>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>



<%= form_with model: @book do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Body</h4>
 <%= f.text_area :body %>
 <%= f.submit 'Create Book' %>
<% end %>
